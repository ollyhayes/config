[core]
	excludesfile = ~/tools/config/.gitignore
	editor = vim
[user]
	name = Olly Hayes
[push]
	default = current
[pull]
	rebase = true
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[alias]
	l = log --pretty=format:'%Cred%h %Cgreen%an %Creset%s %Cblue%ar' --graph -n 10
	lg = log --pretty=format:'%Cred%h %Cgreen%an %Creset%s %Cblue%ar' --graph
	ls = !git status && git l
